<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingBottom="@dimen/ten_dp"
    android:clickable="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/grey_light2">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
             android:paddingTop="@dimen/ten_dp">

            <com.jim.pocketaccounter.utils.FABIcon
                android:id="@+id/ivPurposeinfoIcon"
                android:layout_width="@dimen/sixty_dp"
                android:layout_height="@dimen/sixty_dp"
                android:clickable="false"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="@dimen/twelve_dp"
                android:layout_centerVertical="true"
                android:layout_marginBottom="@dimen/twelve_dp"
                android:layout_marginRight="@dimen/sixteen_dp"
                android:layout_marginLeft="@dimen/sixteen_dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginRight="@dimen/sixteen_dp"
                android:layout_gravity="center_vertical">
                <TextView
                    android:id="@+id/tvPurposeInfoName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="My Purpose"
                    android:layout_marginLeft="@dimen/ten_dp"
                    android:layout_marginRight="@dimen/sixteen_dp"
                    android:textSize="@dimen/twenty_dp"
                    android:textColor="@color/black_for_glavniy_text"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/black_for_secondary_text"
                    android:text="@string/left_acomuleted"
                    android:layout_marginLeft="@dimen/ten_dp"
                    android:layout_marginRight="@dimen/sixteen_dp"
                    android:textSize="@dimen/twelve_dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvPurposeInfoAmount"
                    android:layout_marginRight="@dimen/sixteen_dp"
                    android:layout_marginLeft="@dimen/ten_dp"
                    android:layout_gravity="center_vertical"
                    android:text="TextView"
                    android:textColor="@color/black_for_glavniy_text"
                    android:textSize="@dimen/sixteen_dp"/>

            </LinearLayout>
        </LinearLayout>
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/ten_dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/ten_dp"
                    android:layout_marginLeft="@dimen/sixteen_dp"
                    android:layout_marginRight="@dimen/sixteen_dp"
                    android:layout_marginTop="@dimen/ten_dp"
                    android:layout_marginBottom="@dimen/ten_dp"
                    android:visibility="gone"
                    android:id="@+id/tvCategoryInfoSubcategories"/>
            </LinearLayout>
        </HorizontalScrollView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/sixteen_dp"
            android:layout_marginRight="@dimen/sixteen_dp"
            android:layout_marginTop="@dimen/ten_dp"
            android:visibility="gone"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/left_date"
                android:textSize="@dimen/sixteen_dp"
                android:layout_weight="1"
                android:layout_marginRight="@dimen/ten_dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2 month"
                android:textColor="@color/black_for_glavniy_text"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"

            android:layout_marginBottom="@dimen/ten_dp">

            <TextView
                android:id="@+id/tvPurposeInfoToCash"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/sixteen_dp"
                android:layout_marginRight="@dimen/five_dp"
                android:layout_weight="1"
                android:background="@drawable/knopka_zeleniy"
                android:gravity="center"
                android:textColor="@color/green_light"
                android:text="@string/spend" />

            <TextView
                android:id="@+id/tvPurposeInfoReplanish"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/five_dp"
                android:layout_marginRight="@dimen/sixteen_dp"
                android:layout_weight="1"
                android:background="@drawable/knopka_zeleniy"
                android:gravity="center"
                android:textColor="@color/green_light"
                android:text="@string/replanish" />
        </LinearLayout>
    </LinearLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="@color/green_light_forline"
        android:layout_marginBottom="@dimen/ten_dp" />





    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/sixteen_dp"
        android:layout_marginRight="@dimen/sixteen_dp"
        android:layout_marginTop="@dimen/five_dp"
        android:layout_marginBottom="@dimen/five_dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/operations"
            android:textSize="@dimen/sixteen_dp"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/ten_dp"
            android:layout_marginRight="@dimen/ten_dp"/>
        <ImageView
            android:id="@+id/ivPurposeInfoDelete"
            android:layout_width="@dimen/twenty_dp"
            android:layout_height="@dimen/twenty_dp"
            android:src="@drawable/ic_delete_proz"
            android:layout_marginRight="@dimen/ten_dp"/>
        <ImageView
            android:layout_width="@dimen/twenty_dp"
            android:layout_height="@dimen/twenty_dp"
            android:id="@+id/ivPurposeInfoFilter"
            android:src="@drawable/ic_filter"
            android:layout_marginRight="@dimen/ten_dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/sixteen_dp"
        android:layout_marginRight="@dimen/sixteen_dp"
        android:background="@color/toolbar_color">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/date"
            android:gravity="center"
            android:layout_weight="1.25"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/name"
            android:gravity="center"
            android:layout_weight="1"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/amount"
            android:gravity="center"
            android:layout_weight="1.25"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/rvPurposeInfo"
            android:layout_marginLeft="@dimen/sixteen_dp"
            android:layout_marginRight="@dimen/sixteen_dp"
            android:layout_marginBottom="@dimen/ten_dp"
            android:background="@drawable/edittext_with_toolbarcolor"
            android:layout_weight="1"/>
        <RelativeLayout
            android:id="@+id/forGoneLeftDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/leftdate"
                android:textSize="@dimen/ten_dp"
                android:layout_marginRight="@dimen/sixteen_dp"
                android:textColor="@color/black_for_glavniy_text"
                android:text="2 month"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:text="@string/left_datee"
                android:textSize="@dimen/ten_dp"
                android:layout_marginRight="@dimen/ten_dp"
                android:id="@+id/tvLeftDate"
                android:layout_toLeftOf="@+id/leftdate"
                android:layout_toStartOf="@+id/leftdate" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/totaly"
                android:textSize="@dimen/ten_dp"
                android:layout_marginBottom="@dimen/five_dp"
                android:layout_marginRight="@dimen/sixteen_dp"
                android:textColor="@color/green_light"
                android:text="1500$"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:text="@string/total"
                android:textSize="@dimen/ten_dp"
                android:layout_marginRight="@dimen/ten_dp"
                android:layout_marginBottom="@dimen/five_dp"
                android:id="@+id/tvCategoryInfoTotal"
                android:layout_toLeftOf="@+id/totaly"
                android:layout_toStartOf="@+id/totaly" />
        </RelativeLayout>

    </LinearLayout>
</LinearLayout>
