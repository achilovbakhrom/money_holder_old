<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white" 
    android:orientation="vertical"
    android:paddingBottom="@dimen/ten_dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/grey_light2">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.jim.pocketaccounter.utils.FABIcon
                android:id="@+id/fabAccountIcon"
                android:layout_width="@dimen/fiftysix_dp"
                android:layout_height="@dimen/fiftysix_dp"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="@dimen/twelve_dp"
                android:layout_centerVertical="true"
                android:layout_marginBottom="@dimen/twelve_dp"
                android:layout_marginRight="@dimen/sixteen_dp"
                android:layout_marginLeft="@dimen/sixteen_dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center_vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvAccountNameInfo"
                    android:layout_marginRight="@dimen/sixteen_dp"
                    android:layout_marginLeft="@dimen/ten_dp"
                    android:layout_gravity="center_vertical"
                    android:text="TextView"
                    android:textSize="@dimen/sixteen_dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvAccountConfigurationInfo"
                    android:layout_gravity="center_vertical"
                    android:text="TextView"
                    android:layout_marginLeft="@dimen/ten_dp"
                    android:layout_marginRight="@dimen/sixteen_dp"
                    android:layout_marginTop="@dimen/five_dp"
                    android:textSize="@dimen/twelve_dp"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/ten_dp"
            android:layout_marginBottom="@dimen/ten_dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/replanish"
                android:id="@+id/tvAccountInfoReplanish"
                android:background="@drawable/knopka_zeleniy"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/green_light"
                android:layout_marginLeft="@dimen/sixteen_dp"
                android:layout_marginRight="@dimen/five_dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/to_earn"
                android:id="@+id/tvAccountInfoToCash"
                android:background="@drawable/knopka_zeleniy"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/green_light"
                android:layout_marginRight="@dimen/sixteen_dp"
                android:layout_marginLeft="@dimen/five_dp"/>
        </LinearLayout>
    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/one_dp"
        android:background="@color/toolbar_color"
        android:layout_marginBottom="@dimen/ten_dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/sixteen_dp"
        android:layout_marginRight="@dimen/sixteen_dp"
        android:layout_marginTop="@dimen/five_dp"
        android:layout_marginBottom="@dimen/five_dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/operations"
            android:textSize="@dimen/sixteen_dp"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/ten_dp"
            android:layout_marginRight="@dimen/ten_dp"/>
        <ImageView
            android:layout_width="@dimen/twenty_dp"
            android:layout_height="@dimen/twenty_dp"
            android:id="@+id/ivAccountInfoOperationsFilter"
            android:src="@drawable/ic_filter"
            android:layout_marginRight="@dimen/ten_dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/sixteen_dp"
        android:layout_marginRight="@dimen/sixteen_dp"
        android:background="@color/toolbar_color">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/date"
            android:gravity="center"
            android:layout_weight="1.25"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/name"
            android:gravity="center"
            android:layout_weight="1"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/amount"
            android:gravity="center"
            android:layout_weight="1.25"/>
    </LinearLayout>
    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/rvAccountDetailsInfo"
        android:layout_marginLeft="@dimen/sixteen_dp"
        android:layout_marginRight="@dimen/sixteen_dp"
        android:layout_marginBottom="@dimen/sixteen_dp"
        android:background="@drawable/edittext_with_toolbarcolor"/>
</LinearLayout>
